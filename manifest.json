{
  "manifest_version": 2,
  "name": "Slowify - mindful browsing",
  "version": "1.0",
  "description": "Add a countdown timer before opening selected websites.",
  "icons": {
    "48": "timer-icon.png"
  },
  "permissions": ["storage",  "tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["slowify.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "browser_style": true,
    "chrome_style": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "slowify@guylifshitz.com"
    }
  }
}
